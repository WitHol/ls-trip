pkgname=ls-trip
pkgver=0.1.0
pkgrel=1
pkgdesc="A joke shell utility, that simulates a drug trip when you mistype ls for lsd"
arch=('x86_64')
url="https://github.com/WitHol/ls-trip"
license=('GPL-2.0')
makedepends=('rustup' 'git')
checkdepends=('git')
conflicts=('lsd')
source=("https://github.com/WitHol/ls-trip/archive/refs/tags/v0.1.0.tar.gz")
sha256sums=('25109f2f112806059bfb25b8c3e22ed19747e6099f0f3c0867869d10cb3893ea')
validpgpkeys=()

prepare() {
}

build() {
	cd "$pkgname-$pkgver"
}

check() {
	cd "$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
